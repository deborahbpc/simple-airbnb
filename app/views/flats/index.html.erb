<h1>All flats</h1>

<%= link_to 'Add new flat', new_flat_path %>

<% @flats.each do |flat|%>
<div class="container">
  <div class="p-2 m-2 border d-flex">
    <div class="m-2">
      <%= image_tag "http://picsum.photos/200/200?random=#{flat.id}" %>
    </div>
    <div class="m-2">
      <p><%= link_to flat.name, flat_path(flat) %></p>
      <p><%= flat.address %></p>
      <p><i class="fas fa-user-friends"></i>: <%= flat.number_of_guests %></p>
      <p><i class="fas fa-dollar-sign"></i>: <%= flat.price_per_night %></p>
    </div>
    <div>
      <%= link_to 'Edit', edit_flat_path(flat) %>
      <%= link_to 'Delete', flat_path(flat) %>
    </div>
  </div>
</div>
  
<% end %>
